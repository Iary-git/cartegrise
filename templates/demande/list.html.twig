{% extends 'base.html.twig' %}

{% from 'shared/macro.html.twig' import delete_form %}

{% set confirmMessage = "Etes-vous sûr de vouloir annuler cette demande ?" %}

{% block page_content %}
    <div class="col-md-12 col-lg-10 mx-auto d-flex flex-row justify-content-center my-flex-container align-items-center">
        <div class="row d-flex comment-ca-marche-texte flex-row-reverse my-flex-container w-100 mx-3 mx-lg-4">
            <div class="col-12">
                <div class="px-2">
                    <br>
                    <h3 class="text-center title-client">ESPACE CLIENT</h3>
                    <div class="nav-client mt-5">
                        <ul class="d-flex align-items-center">
                            <li><a href="#" class="nav-client-item home-item"><img src="{{ asset('asset/img/home-espace-client.png')}}" alt="home espace client"></a></li>
                            <li><a href="#" class="nav-client-item">Historique</a></li>
                            <li><a href="#" class="nav-client-item">Mails réçus</a></li>
                        </ul>
                    </div>
                    <h3 class="title-client">Demarche:</h3>
                    <div class="demarche-container">
                        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="pills-apercu-tab" data-toggle="pill" href="#pills-apercu" role="tab" aria-controls="pills-apercu" aria-selected="true">Aperçu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-document-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-document" aria-selected="false">Détails de la commande</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-document-tab" data-toggle="pill" href="#pills-document" role="tab" aria-controls="pills-document" aria-selected="false">J'envoie mes documents</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="pills-tabContent">
                            <div class="content-demarche tab-pane fade show active" id="pills-apercu" role="tabpanel" aria-labelledby="pills-apercu-tab">
                                <p>{{ lastDemande.transaction}} : {{ lastDemande.commande.demarche.nom }} {{ lastDemande.commande.ceerLe | date('d/m/Y à h:i:s')}}</p>
                                <p>Dossier à deposer en ligne: <span class="badge badge-{{ statusOfCommande(lastDemande.commande, "style") }}">{{ statusOfCommande(lastDemande.commande, "text") }}</span></p>
                                <p>Dossier à envoyer par courier: A expédier / Reçu</p>
                                <p>Paiement: En attente / Accepté / Refusé </p>
                            </div>
                            <div class="content-demarche tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                                <p>{{ lastDemande.commande.demarche.nom }} {{ lastDemande.commande.ceerLe | date('d/m/Y - h:i')}}</p>
                                <p>{{ lastDemande.commande.immatriculation | displayValue}}</p>
                                <p>75 010</p>
                                <br>
                                <p>Votre commande expire le 24.10.19</p>
                                <br>
                                <p>Facture</p>
                            </div>
                            <div class="content-demarche tab-pane fade" id="pills-document" role="tabpanel" aria-labelledby="pills-document-tab">
                                Finalisez votre démarche
                            </div>
                        </div>
                    </div>
                    <br>
                    <h3>Commandes effectuées​</h3>
                    <hr>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Commande</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Nom et prénom</th>
                                    <th scope="col">Département</th>
                                    <th scope="col">Immatriculation</th>
                                    <th scope="col">Statu</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for demande in demandes %}
                                <tr>
                                    <td>{{ demande.id | displayValue}}</td>
                                    <td>{{ demande.commande.demarche.nom | displayValue}}</td>
                                    <td>{{ demande.commande.ceerLe | date('d-m-Y')}}</td>
                                    <td>{{ client.clientNom | displayValue}} {{ client.clientPrenom | displayValue}}</td>
                                    <td class="text-center">{{ demande.commande.codePostal | displayValue}}</td>
                                    <td class="text-center">{{ demande.commande.immatriculation | displayValue}}</td>
                                    <td>
                                        <span class="badge badge-{{ statusOfCommande(demande.commande, "style") }}">{{ statusOfCommande(demande.commande, "text") }}</span>                                        
                                    </td>
                                    <td>
                                        <a href="{{path('demande_recap', {'demande': demande.id })}}">
                                            <button type="button" class="btn btn-primary btn-sm">Résumé</button>
                                        </a>
                                        {% if demande.commande.transaction is not null and demande.commande.transaction.status == "00" %}
                                            <a href="{{path('demande_dossiers_a_fournir', {id: demande.id })}}">
                                                <button type="button" class="btn btn-primary btn-sm">Documents à fournir</button>
                                            </a>                                            
                                        {% else %}
                                            {{ delete_form('demande_annuler', {id: demande.id}, 'demande' ~ demande.id, confirmMessage, 'Annuler', null, 'btn btn-danger btn-sm mb-1') }}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="8">Aucune demande trouvé</td></tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>                  
{% endblock %}