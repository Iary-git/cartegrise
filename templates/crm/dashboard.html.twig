{% extends "crm_base.html.twig" %}
{% block page_content %}
    {{ form_start(form)}}
    {{ form_rest(form)}}
    {{ form_end(form)}}

    <div class="col-md-12 col-lg-8 d-flex flex-row justify-content-center my-flex-container align-items-center">
        <div class="row d-flex comment-ca-marche-texte flex-row-reverse my-flex-container w-100 mx-3 mx-lg-4">
            <div class="col-12">
                <div class="px-2">
                    <br>
                    <h3>Vos demandes TMS</h3>
                    <hr>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">id</th>
                                    <th scope="col">Type Demande</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Département</th>
                                    <th scope="col">Immatriculation</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for demande in demandes %}
                                <tr>
                                    <td>{{ demande.id }}</td>
                                    <td>{{ demande.commande.demarche.nom }}</td>
                                    <td>{{ demande.commande.ceerLe | date('d-m-Y')}}</td>
                                    <td>{{ demande.commande.codePostal }}</td>
                                    <td>{{ demande.commande.immatriculation }}</td>
                                    <td>
                                        <span
                                            class="badge badge-{{ statusOfCommande(demande.commande, "style") }}">{{ statusOfCommande(demande.commande, "text") }}</span>
                                    </td>
                                    <td>
                                        <a href="{{path('demande_recap', {'demande': demande.id })}}">
                                            <button type="button" class="btn btn-primary btn-sm">Résumé</button>
                                        </a>
                                        {% if demande.transaction is not null and demande.transaction.status == "00" %}
                                        <a href="{{path('crm_dossier_fournir', {'demande': demande.id })}}">
                                            <button type="button" class="btn btn-primary btn-sm">Dossiers à fournir</button>
                                        </a>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="8">Aucune demande trouvé</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}