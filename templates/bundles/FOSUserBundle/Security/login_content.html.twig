{% trans_default_domain 'FOSUserBundle' %}
<div class="col-12 col-lg-8 mx-auto mb-4 mb-lg-0 div-account d-flex flex-row justify-content-center align-items-center my-flex-containe">
	<div class="row justify-content-center">
		<div class="col-md-12 col-lg-10 mx-auto wrapper fadeInDown d-flex flex-row justify-content-center align-items-center my-flex-container">

			<div id="formContent" class="px-3 px-lg-0">

				<form class="formContent-bc col-12 row d-flex flex-row justify-content-center my-flex-container" action="{{ path("fos_user_security_check") }}" method="post">
					{% if error %}
						<div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					{% if csrf_token %}
						<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					{% endif %}
					{# <div class=" col-10 mx-auto fadeIn login-error mt-2">Erreur : </div> #}
					<div class=" col-10 mx-auto fadeIn login-error mt-2">E-mai​l : </div>
					<label class="hidden-xl-down" for="username">{{ 'security.login.username'|trans }}</label>
					<input class="col-10 mx-auto fadeIn second" type="text" id="username" name="_username" placeholder="Votre adresse mail" value="{{ last_username }}">


					{# <div class=" col-10 mx-auto fadeIn login-error mt-2">Erreur : </div> #}
					<div class=" col-10 mx-auto fadeIn login-error mt-2">Mot de passe : </div>
					<label class="hidden-xl-down" for="password">{{ 'security.login.password'|trans }}</label>
					<input class="col-10 mx-auto fadeIn third" type="password" id="password" name="_password" placeholder="Mot de passe">
					<div class="label-content-container d-flex justify-content-center align-items-center  mt-3 mb-3">
						<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
						<label for="remember_me" class="form-check-label">{{ 'security.login.remember_me'|trans }}</label>
					</div>
					<input type="submit" id="_submit" name="_submit" class="fadeIn fourth" value="{{ 'security.login.submit'|trans }}" />
				</form>

				<div id="formFooter">
					<p>
						<a class="underlineHover" href="{{ path('Accueil')}}">Retourner à l'accueil</a>
						<div class="form-group form-check oublie-mdp">
							<a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié ?</a>
						</div>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>