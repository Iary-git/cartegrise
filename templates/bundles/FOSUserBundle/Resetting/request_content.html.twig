{% trans_default_domain 'FOSUserBundle' %}
<div class="col-lg-7 col-sm-10 mx-auto mb-5 d-flex align-items-center">
    <form class="mail-rejet mdp-oublie" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="form-group">
            <label for="username" class="col-form-label col-form-label">{{ 'resetting.request.username'|trans }}</label>
            <input type="text" id="username" name="username" required="required" class="form-control" placeholder="exemple@cgofficiel.fr">
        </div>
        <div class="form-group">
            <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn btn-primary"/>
        </div>
    </form>
</div>