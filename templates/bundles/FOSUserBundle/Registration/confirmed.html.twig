{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="col-md-12 col-lg-8 mx-auto d-flex error-flex">
    <div class="error-container">
		<p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
		{% if targetUrl %}
		<p class="desc-error"><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
		{% endif %}
        <p><a href="{{ path('commande_list') }}"><i class="fas fa-angle-double-right"></i> {{"Vos demandes en cours" | upper}}</a>
			  <span class="badge badge-primary badge-pill">{{ countCommandeUnchecked(app.user) }}</span></p>
        <p><a class="btn btn-primary btn-lg" href="{{ path('Accueil') }}"><i class="fas fa-angle-double-right"></i> {{"Retour Ã  la page d'accueil" | upper}}</a></p>
    
	</div>
</div>
<style>
	body {
		background-color: #fff;
		color: #222;
		font: 16px/1.5 -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
		margin: 0;
	}

	.container {
		margin: 30px;
		max-width: 600px;
	}

	h1 {
		color: #dc3545;
		font-size: 36px;
		font-family: lato;
	}

	h2 {
		font-size: 24px;
	}
	a {
		text-decoration: none;
		font-size: 24px;
	}
</style>
{% endblock fos_user_content %}
