{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body_id %}{% endblock %}

{% block class %}body-accueil{% endblock %}

{% block page_content %}
<div class="col-md-12 col-lg-8 d-flex flex-row justify-content-center my-flex-container align-items-center">
    <div class="row d-flex flex-row-reverse my-flex-container pt-5 pb-5">
        <h1 class="col-12 col-sm-12 home-secondview--titre">Quel est le coût d'une Carte Grise?</h1>
        <div class="col-4">
            Prix de la Carte Grise dans la region de :  <span class="departement_selectione"></span><br>
            Tarif cheval fiscal <span class="departement_tarif"></span><br>
            Tarif exoneration <span class="departement_exoneration"></span>
        </div>
        <div class="col-12">
            <h4>Prix de votre carte grise par département</h4>
            <div id="francemap" style="min-width: 550px; height: 600px; position: relative; overflow: hidden; background-color: rgb(249, 249, 249);"></div>
        </div>
        </div>
        </div>
{% endblock %}

{% block pagetext_content %}
	{{ include('home/composant/texte/accueil-texte.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('javascripts/card/dist/jquery.vmap.js') }}"></script>
    <script type="text/javascript" src="{{ asset('javascripts/card/dist/maps/jquery.vmap.france.js') }}" charset="utf-8"></script>
    <script src="{{ asset('javascripts/card/value.js') }}"></script>
    <script>
        jQuery(document).ready(function () {
            jQuery('#vmap').vectorMap({
                map: 'france_fr',
                enableZoom: false,
                showTooltip: true
            });
        });

    </script>
    <script src="{{ asset('javascripts/home.js') }}"></script>
{% endblock %}