{% extends 'base.html.twig' %}

{% block class %}body-ccm{% endblock %}
{% block page_content %}
<div class="col-md-12 col-lg-10 mx-auto">
    <div class="row">
        <div class="col-12">
            {{ form_start(form) }}
                <div class="form-client row d-flex flex-row justify-content-center">
                    <div class="col-10 col-lg-10 mx-auto">
                        <legend class="col-form-label">Compte</legend>
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.username) }}
                            {{ form_errors(form.username) }}
                            {{ form_widget(form.username) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword) }}
                            {{ form_errors(form.plainPassword) }}
                            {{ form_widget(form.plainPassword) }}
                        </div>
                        <legend class="col-form-label">Client</legend>
                        <div class="form-group">
                            {{ form_label(form.client.clientGenre) }}
                            {{ form_errors(form.client.clientGenre) }}
                            {{ form_widget(form.client.clientGenre) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.client.clientNom) }}
                            {{ form_errors(form.client.clientNom) }}
                            {{ form_widget(form.client.clientNom) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.client.clientPrenom) }}
                            {{ form_errors(form.client.clientPrenom) }}
                            {{ form_widget(form.client.clientPrenom) }}
                        </div>
                    </div>
                    <div class="col-10 col-lg-10 mx-auto">
                        <div class="form-group">
                            {{ form_label(form.client.clientContact) }}
                            {{ form_errors(form.client.clientContact) }}
                            {{ form_widget(form.client.clientContact) }}
                        </div>
                    </div>
                </div>
            <div class="text-center">
                {{ form_rest(form) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}